@model Web_DonNghiPhep.ViewModels.ListNghiPhepVM

@{
    ViewData["Title"] = "Chi tiết đơn nghỉ phép";
}

<div class="container mt-4">
    <h2>Chi tiết đơn nghỉ phép</h2>
    <div class="row">
        <div class="col-md-6">
            <p><strong>Mã đơn:</strong> @Model.MaDon</p>
            <p><strong>Ngày bắt đầu:</strong> @Model.NgayBatDau.ToString("dd/MM/yyyy")</p>
            <p><strong>Ngày kết thúc:</strong> @Model.NgayKetThuc.ToString("dd/MM/yyyy")</p>
            <p><strong>Số ngày:</strong> @Model.SoNgay</p>
           
        </div>
        <div class="col-md-6">
            
            <p><strong>Trạng thái:</strong> @Model.TrangThai</p>
            <p><strong>Ngày xử lý:</strong> @(Model.NgayXuLy.HasValue ? Model.NgayXuLy.Value.ToString("dd/MM/yyyy") : "-")</p>
            <p><strong>Tên trưởng phòng:</strong> @Model.TenTruongPhong</p>
        </div>
    </div>
    <div class="mt-4">
        @if (Model.TrangThai == "Đang chờ")
        {
            <form method="post" asp-action="HuyDon" asp-controller="NghiPhep">
                <input type="hidden" name="MaDon" value="@Model.MaDon" />
            </form>
        }
        <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
    </div>
</div>