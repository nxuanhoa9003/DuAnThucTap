@model Web_DonNghiPhep.Models.Titles

@{
    ViewData["Title"] = "Edit";
}

<h3>Sửa chức danh</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Title_id" />
            <div class="form-group my-2">
                <label asp-for="Title_name" class="control-label"></label>
                <input asp-for="Title_name" class="form-control" />
                <span asp-validation-for="Title_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-warning" />
                <a class="btn btn-secondary" asp-action="Index">Trở lại</a>

            </div>
        </form>
    </div>
</div>


