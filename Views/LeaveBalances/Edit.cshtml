@model Web_DonNghiPhep.Models.LeaveBalance

@{
    ViewData["Title"] = "Edit";
}

<h4>Chỉnh sửa ngày nghỉ</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Employee_id" class="control-label"></label>
                <input hidden asp-for="Employee_id" class="form-control" />
                <input readonly asp-for="FullName" class="form-control" />
                <span asp-validation-for="Employee_id" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalDays" class="control-label"></label>
                <input asp-for="TotalDays" class="form-control" />
                <span asp-validation-for="TotalDays" class="text-danger"></span>
            </div>
            
            <div class="form-group my-2">
                <input type="submit" value="Save" class="btn btn-warning" />
                <a class="btn btn-secondary" asp-action="Index">Trở lại</a>
            </div>
        </form>
    </div>
</div>


